{
  "name": "groovy",
  "displayName": "Groovy",
  "description": "Language support for Groovy",
  "version": "0.0.0",
  "publisher": "publisher",
  "homepage": "https://github.com/prominic/groovy-language-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/prominic/groovy-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/prominic/groovy-language-server/issues"
  },
  "license": "Apache-2.0",
  "private": true,
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Groovy",
    "Grails"
  ],
  "main": "extension",
  "engines": {
    "vscode": "^1.99.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "@types/vscode": "^1.99.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "@vscode/vsce": "^3.4.2",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "activationEvents": [
    "onLanguage:groovy"
  ],
  "contributes": {
    "debuggers": [
      {
        "type": "groovy",
        "label": "Groovy Debug",
        "languages": [
          "groovy"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "name": {
                "type": "string",
                "description": "Launch configuration name."
              },
              "request": {
                "type": "string",
                "enum": [
                  "launch"
                ]
              },
              "type": {
                "type": "string",
                "enum": [
                  "groovy"
                ]
              }
            }
          },
          "attach": {
            "properties": {
              "name": {
                "type": "string",
                "description": "Attach configuration name."
              },
              "request": {
                "type": "string",
                "enum": [
                  "attach"
                ]
              },
              "type": {
                "type": "string",
                "enum": [
                  "groovy"
                ]
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "groovy",
            "request": "launch",
            "name": "Launch Groovy Debug Adapter"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "groovy",
        "extensions": [
          ".groovy"
        ],
        "aliases": [
          "Groovy"
        ]
      }
    ],
    "commands": [
      {
        "command": "groovy.restartServer",
        "title": "Restart Groovy language server",
        "category": "Groovy"
      },
      {
        "command": "groovy.findUsages",
        "title": "Find Groovy Usages",
        "category": "Groovy"
      },
      {
        "command": "groovy.goToSuperMethod",
        "title": "Go to Super Method",
        "category": "Groovy"
      },
      {
        "command": "groovy.addClasspathJars",
        "title": "Add JARs to Groovy classpath",
        "category": "Groovy"
      },
      {
        "command": "groovy.addMavenDependency",
        "title": "Add Maven dependency",
        "category": "Groovy"
      },
      {
        "command": "groovy.addMavenRepository",
        "title": "Add Maven repository",
        "category": "Groovy"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "groovyUsages",
          "name": "Groovy Usages"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "description": "Groovy configuration",
      "properties": {
        "groovy.java.home": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JDK. Use this setting if the extension cannot find Java automatically."
        },
        "groovy.classpath": {
          "type": "array",
          "default": null,
          "description": "Specifies additional entries to add to the classpath. May contain both folders and individual .jar files.",
          "items": {
            "type": "string"
          }
        },
        "groovy.formatting.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Formats Groovy documents on save using the language server."
        },
        "groovy.formatting.indentSize": {
          "type": "integer",
          "default": 4,
          "description": "Number of spaces to use for each indentation level."
        },
        "groovy.formatting.braceStyle": {
          "type": "string",
          "default": "sameLine",
          "enum": [
            "sameLine",
            "nextLine"
          ],
          "description": "Brace placement style for Groovy formatting."
        },
        "groovy.formatting.spaceAroundOperators": {
          "type": "boolean",
          "default": true,
          "description": "Insert spaces around common operators."
        },
        "groovy.formatting.spaceAfterCommas": {
          "type": "boolean",
          "default": true,
          "description": "Insert a space after commas."
        },
        "groovy.formatting.spaceInsideBraces": {
          "type": "boolean",
          "default": false,
          "description": "Insert spaces inside brace blocks."
        },
        "groovy.classpathRecursive": {
          "type": "boolean",
          "default": false,
          "description": "When true, classpath folders are searched recursively for .jar files."
        },
        "groovy.gradle.classpathScopes": {
          "type": "array",
          "default": ["compile", "runtime", "test"],
          "description": "Gradle dependency scopes to include in the Groovy classpath (compile, runtime, test, provided).",
          "items": {
            "type": "string"
          }
        },
        "groovy.gradle.includeBuildscript": {
          "type": "boolean",
          "default": false,
          "description": "Include buildSrc/buildscript outputs in the Groovy classpath."
        },
        "groovy.excludePatterns": {
          "type": "array",
          "default": null,
          "description": "Glob patterns for files/folders to exclude from project scanning.",
          "items": {
            "type": "string"
          }
        },
        "groovy.sourceRoots": {
          "type": "array",
          "default": null,
          "description": "Explicit source roots to scan. If empty, common Groovy roots (src/main/groovy, src/test/groovy) are auto-detected.",
          "items": {
            "type": "string"
          }
        },
        "groovy.maven.repositories": {
          "type": "array",
          "default": null,
          "description": "Maven repository URLs to resolve dependencies.",
          "items": {
            "type": "string"
          }
        },
        "groovy.maven.dependencies": {
          "type": "array",
          "default": null,
          "description": "Maven dependency coordinates (group:artifact:version[:classifier][@ext]).",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
